# CapSight Environment Variables

# Application
PROJECT_NAME=CapSight
VERSION=1.0.0
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days
ALGORITHM=HS256

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=capsight
POSTGRES_PASSWORD=password123
POSTGRES_DB=capsight_db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379

# External APIs - Real-time Data Sources
FRED_API_KEY=your_fred_api_key_here
TREASURY_API_KEY=your_treasury_api_key_here
RAPIDAPI_KEY=your_rapidapi_key_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Cache Configuration
CACHE_TTL_MACRO_MINUTES=30
CACHE_TTL_FUNDAMENTALS_HOURS=24
CACHE_TTL_COMPS_HOURS=24

# Data Freshness Thresholds (days)
FRESHNESS_MACRO_DAYS=7
FRESHNESS_FUNDAMENTALS_DAYS=90
FRESHNESS_COMPS_DAYS=180

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT_MINUTES=2

# Rate Limiting
RATE_LIMIT_RPM=60
MAX_CONCURRENT_REQUESTS=10

# Security
WEBHOOK_SECRET=your_webhook_secret_here

# Geo Services
GEOCODING_API_KEY=your_geocoding_api_key_here
GEOCACHE_TTL_DAYS=30

# ML Configuration
MODEL_STORAGE_PATH=./ml/models
MODEL_CONFIDENCE_THRESHOLD=0.7

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# CORS
ALLOWED_HOSTS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]

# Production overrides (set these in production environment)
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://host:port
# SECRET_KEY=your-production-secret-key
# STRIPE_SECRET_KEY=sk_live_your_production_stripe_key
