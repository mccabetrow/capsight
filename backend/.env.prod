# Production Environment Configuration for CapSight Backend
ENV=production
PROJECT_NAME=CapSight
API_V1_PREFIX=/api/v1

# Security
JWT_SECRET=your_production_jwt_secret_change_this_long_string_min_32_chars_12345
JWT_ALG=HS256
ACCESS_EXPIRE_MIN=45
REFRESH_EXPIRE_MIN=10080

# Database
DATABASE_URL=postgresql://capsight_user:your_db_password@localhost:5432/capsight_prod

# Stripe (replace with live keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_BASIC=price_basic_monthly
STRIPE_PRICE_ID_PRO=price_pro_monthly
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_monthly

# Email/SMS
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=noreply@capsight.ai

# ML Model Settings
MODEL_CONFIDENCE_THRESHOLD=0.8
MODEL_RETRAIN_SCHEDULE=weekly
MAX_FORECAST_HORIZON=36

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
DEMO_MODE=false
DEBUG=false
TESTING=false

# CORS
CORS_ORIGINS=["https://capsight.ai","https://www.capsight.ai","https://app.capsight.ai"]

# Logging & Monitoring
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn_if_using

# Legal & Compliance
LEGAL_DISCLAIMER="Outputs are informational only and not investment advice. CapSight makes no warranty of accuracy or future performance."

# Cache & Performance
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHING=true
CACHE_TTL=300

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
