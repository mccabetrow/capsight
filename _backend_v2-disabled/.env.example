# CapSight Backend v2 Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://capsight:capsight_password@localhost:5432/capsight_db
REDIS_URL=redis://localhost:6379/0

# Kafka/Streaming
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# Feature Store
FEAST_REPO_PATH=./feature_repo
FEAST_ONLINE_STORE_URL=redis://localhost:6379/1

# ML Models
MLFLOW_TRACKING_URI=./mlruns
MODEL_REGISTRY_S3_BUCKET=capsight-models-dev

# External APIs
FRED_API_KEY=your_fred_api_key_here
BLOOMBERG_API_KEY=your_bloomberg_api_key_here
REFINITIV_API_KEY=your_refinitiv_api_key_here
SAFEGRAPH_API_KEY=your_safegraph_api_key_here
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# Monitoring
PROMETHEUS_PORT=8000
GRAFANA_DASHBOARD_URL=http://localhost:3000
PAGERDUTY_API_KEY=your_pagerduty_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
API_RATE_LIMIT=100

# Feature Flags
ENABLE_CHALLENGER_MODELS=true
ENABLE_REAL_TIME_INFERENCE=true
ENABLE_FEEDBACK_LOOP=true

# SLA Targets (optional overrides)
# ACCURACY_CAPRATE_MAE_BPS=75.0
# ACCURACY_NOI_MAPE_PERCENT=12.0
# ACCURACY_ARBITRAGE_TOP_DECILE_PRECISION=0.60
# FRESHNESS_INTRADAY_RATES_MINUTES=15
# FRESHNESS_HOURLY_MORTGAGE_MINUTES=60
# FRESHNESS_DAILY_SIGNALS_HOURS=24
