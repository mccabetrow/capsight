{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.ts",
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "lib/**/*.{ts,js}",
    "pages/api/**/*.{ts,js}",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "testTimeout": 30000
}
